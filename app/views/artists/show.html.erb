<p id="notice"><%= notice %></p>

<h3><%= @artist.name %></h3>


<h6>List of Songs</h6>
<% if @artist.songs.any? %>
  <ul>
    <% @artist.songs.each do |song| %>
     <li class="song-title"><%= song.title %></li>
     <% end %>
  </ul>
<% else %>
  <p>This artist does not have any songs yet.. </p>
<% end %>


<button class="btn btn-danger">
  <%= link_to "Edit Artist", edit_artist_path(@artist.id) %>
</button>

<button class="btn btn-danger">
  <%= link_to "Delete Artist", artist_path(@artist.id), method: :delete, data: {  confirm: "Are you sure you want to delete this artist?" } %>
</button>

<button class="btn btn-danger">
  <%= link_to "All Artists", artists_path %>
</button>
