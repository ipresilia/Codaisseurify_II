<%= form_for @song do |f| %>

  <ul>
    <% @song.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>


<div class="form-group">
  <label>Title</label>
  <%= f.text_field :title, placeholder: "Song Title", class: "form-control" %>
</div>

<div class="form-group">
  <label>Release date</label><br>
  <%= f.date_select :release_date, prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, class: "form-control" %>
</div>

<div class="form-group">
  <label>Genre</label>
  <%= f.text_field :genre, placeholder: "Song Genre", class: "form-control" %>
</div>

<div class="form-group">
  <label>Artwork</label>
  <%= f.text_field :artwork, placeholder: "Song Artwork", class: "form-control" %>
</div>

<div class="form-group">
  <label>Album</label>
  <%= f.text_field :album, placeholder: "Song Album", class: "form-control" %>
</div>

<div class="form-group">
  <label>Artist</label><br>
  <%= f.text_field :artist, placeholder: "Artist", class: "form-control" %>
</div>



  <%= f.submit (@song.new_record? ? "Create" : "Update"), class: "btn btn-danger" %>
<% end %>
